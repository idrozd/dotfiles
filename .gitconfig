
[color]
  ui = auto
[user]
	name = Andrey Titov
	email = atitov@aligntech.com

[alias]
# fafafa comment
  gr  = log --all --abbrev-commit --decorate --graph --color --date-order
  gro  = log --all --abbrev-commit --decorate --graph --color --date-order --oneline
  st  = status
  ci  = commit
  br  = branch
  co  = checkout
  df  = diff
  lg  = log -p
  who = shortlog -s --
  new = shortlog --all --since='1 weeks ago' --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --reverse
  new2 = whatchanged --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	d = difftool
	permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply


[merge "gemfilelock"]
  name = relocks the gemfile.lock
  driver = bundle install

[advice]
  pushNonFastForward = false
  statusHints = false

[core]
  whitespace = trailing-space,space-before-tab,cr-at-eol,fix
  ;whitespace = -trailing-space,-indent-with-non-tab,-tab-in-indent,cr-at-eol
	editor = nano
	excludesfile = /Users/atitov/.global-gitignore
	filemode = false
	filemode = false

[diff]
  renames = copies
  mnemonicprefix = true
	tool = vimdiff

[branch]
  autosetupmerge = true

[push]
  default = tracking

[rerere]
  enabled = true

[merge]
  stat = true
	tool = vimdiff
[url "https://"]
	insteadOf = git://
[difftool]
	prompt = false
[url "ssh://git@heroku.com/"]
	insteadOf = https://git.heroku.com/
[url "ssh://git@heroku.align/"]
	insteadOf = https://heroku.align/

[diff "nodiff"]
    command = /usr/bin/true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Users/atitov/Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/atitov/.stCommitMsg
